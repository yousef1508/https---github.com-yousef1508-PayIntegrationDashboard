@{
    ViewData["Title"] = "Data API (GraphQL)";
}

<div class="row g-4">
    <div class="col-lg-5">
        <div class="card p-3 h-100">
            <h5 class="mb-2">Data API (GraphQL)</h5>
            <p class="small text-muted">
                This dashboard exposes a GraphQL API that other systems can use to retrieve
                payroll summaries, time entries and integration logs. It is designed for
                integrators, BI tools and internal technical users – not daily HR users.
            </p>

            <h6 class="mt-3 mb-2 small text-uppercase text-muted">Schema highlights</h6>
            <ul class="small mb-3">
                <li><code>payrollSummaries</code> – total hours, rates and payout per employee</li>
                <li><code>timeEntries</code> – underlying time data from HR/time systems</li>
                <li><code>integrationLogs</code> – history of imports, exports and retries</li>
                <li><code>employeeMetrics</code> – the same breakdown used in the UI modal</li>
                <li><code>importTime</code> / <code>exportPayroll</code> – trigger integrations</li>
            </ul>

            <h6 class="mt-3 mb-2 small text-uppercase text-muted">Example queries</h6>

            <p class="mb-1 fw-semibold">All payroll summaries</p>
<pre class="bg-light border rounded p-2 small mb-3"><code>query {
  payrollSummaries {
    employeeId
    totalHours
    hourlyRate
    totalPay
    period
  }
}</code></pre>

            <p class="mb-1 fw-semibold">Top 5 by payout</p>
<pre class="bg-light border rounded p-2 small mb-3"><code>query {
  payrollSummaries(order: { totalPay: DESC }, take: 5) {
    employeeId
    totalPay
  }
}</code></pre>

            <p class="mb-1 fw-semibold">Employee metrics (same as modal)</p>
<pre class="bg-light border rounded p-2 small"><code>query {
  employeeMetrics(employeeId: 1) {
    employeeId
    period
    totalHours
    grossPay
    netPay
    taxAmount
    commissionAmount
  }
}</code></pre>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card p-3 h-100 d-flex flex-column">
            <h6 class="mb-2">Try the API</h6>
            <p class="small text-muted mb-2">
                Edit the query and press <strong>Run</strong>. The request is sent to
                <code>/graphql</code> – the same endpoint that the dashboard uses for
                employee metrics in the UI.
            </p>

            <textarea id="gqlQuery" class="form-control mb-2" rows="10">
query {
  payrollSummaries {
    employeeId
    totalHours
    hourlyRate
    totalPay
    period
  }
}
            </textarea>

            <div class="mb-2">
                <button id="runQuery" class="btn btn-primary btn-sm">
                    <i class="bi bi-play-fill me-1"></i>Run
                </button>
                <span id="gqlStatus" class="small text-muted ms-2"></span>
            </div>

            <label class="small text-muted mb-1">Result</label>
            <pre id="gqlResult" class="bg-dark text-light small p-2 rounded mb-0 flex-grow-1" style="overflow:auto; min-height: 160px;"></pre>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const runBtn = document.getElementById('runQuery');
        const queryBox = document.getElementById('gqlQuery');
        const resultBox = document.getElementById('gqlResult');
        const statusLabel = document.getElementById('gqlStatus');

        runBtn.addEventListener('click', async () => {
            const query = queryBox.value;

            statusLabel.textContent = "Running...";
            resultBox.textContent = "";

            try {
                const res = await fetch('/graphql', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ query })
                });

                const json = await res.json();
                statusLabel.textContent = res.ok ? "OK" : "Error";

                resultBox.textContent = JSON.stringify(json, null, 2);
            } catch (e) {
                statusLabel.textContent = "Network error";
                resultBox.textContent = e.toString();
            }
        });
    </script>
}
