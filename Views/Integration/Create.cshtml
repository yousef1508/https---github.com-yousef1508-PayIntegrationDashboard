@model PayrollIntegrationDashboard.Models.TimeEntry

@{
    ViewData["Title"] = "Manual time entry";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Manual time entry</h3>
        <small class="text-muted">
            Used for testing integrations or correcting time data before export to payroll.
        </small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left-short me-1"></i> Back to dashboard
        </a>
    </div>
</div>

<div class="row g-4">
    <!-- FORM COLUMN -->
    <div class="col-lg-7">
        <div class="card p-4">
            <h6 class="mb-3">Create manual time entry</h6>

            <form asp-action="Create" method="post" novalidate>
                @* keep source aligned with the rest of the system *@
                <input asp-for="Source" type="hidden" value="Manual" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                    <input asp-for="EmployeeId" class="form-control" placeholder="e.g. 1001" />
                    <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                    <small class="text-muted d-block mt-1">
                        Must match the employee identifier used in the HR/time system.
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                    <small class="text-muted d-block mt-1">
                        The work date that should be included in the current payroll period.
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Hours" class="form-label">Hours</label>
                    <input asp-for="Hours" class="form-control" type="number" step="0.25" min="0" />
                    <span asp-validation-for="Hours" class="text-danger small"></span>
                    <small class="text-muted d-block mt-1">
                        Number of hours worked on the selected date. Validation rules prevent
                        negative values or unrealistic hours.
                    </small>
                </div>

                <div class="border-top pt-3 mt-2 d-flex justify-content-between align-items-center">
                    <div class="small text-muted">
                        When you save, this entry will be validated and included in the
                        dashboard, charts and export preview.
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save entry
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- INFO / CONTEXT COLUMN -->
    <div class="col-lg-5">
        <div class="card p-4 mb-3">
            <h6 class="mb-2">What happens after saving?</h6>

            <ul class="small text-muted mb-0">
                <li class="mb-1">
                    The entry is stored as a <strong>Manual</strong> source in the integration database.
                </li>
                <li class="mb-1">
                    It immediately updates the <strong>Payroll history</strong> chart and the
                    <strong>Recent employees</strong> table on the dashboard.
                </li>
                <li class="mb-1">
                    Aggregated hours for this employee are recalculated and reflected in
                    the <strong>employee earnings card</strong> (the pie-chart modal).
                </li>
                <li class="mb-1">
                    The entry becomes part of the next <strong>Export preview</strong> and
                    <strong>Export to payroll</strong> run.
                </li>
            </ul>
        </div>

        <div class="card p-4">
            <h6 class="mb-2">Typical consultant use cases</h6>
            <ul class="small text-muted mb-0">
                <li class="mb-1">
                    Reproducing an issue reported by a customer by entering the same hours
                    they see in their HR/time system.
                </li>
                <li class="mb-1">
                    Correcting imported data before the export window (e.g. wrong date or hours).
                </li>
                <li class="mb-1">
                    Testing that <strong>validation rules</strong> react correctly to edge cases
                    (missing ID, extreme hours, etc.).
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
