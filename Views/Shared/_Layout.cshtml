@{
    var title = ViewData["Title"] ?? "Payroll Integration Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body { background-color: #f5f5f7; }
        .app-shell { min-height: 100vh; display:flex; }
        .sidebar { width: 230px; background:#111827; color:#9ca3af; }
        .sidebar-brand { padding:20px 16px; font-weight:600; color:#fff; font-size:1.25rem; }
        .sidebar a { display:block; padding:10px 18px; color:#9ca3af; text-decoration:none; font-size:0.95rem; }
        .sidebar a.active, .sidebar a:hover { background:#1f2937; color:#fff; }
        .sidebar .nav-section { margin-top:8px; font-size:0.75rem; text-transform:uppercase; padding:0 18px; color:#6b7280; }
        .main { flex:1; display:flex; flex-direction:column; }
        .topbar { height:64px; background:#ffffff; border-bottom:1px solid #e5e7eb; display:flex; align-items:center; justify-content:space-between; padding:0 24px; }
        .content { padding:24px; }
        .card-kpi { border-radius:14px; border:0; box-shadow:0 1px 2px rgba(0,0,0,0.06); }

        /* Chart area sizing */
        .chart-wrapper {
            position: relative;
            height: 260px;
        }

        .chart-wrapper canvas {
            width: 100% !important;
            height: 100% !important;
        }
    </style>
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar">
            <div class="sidebar-brand">
                <i class="bi bi-diagram-3-fill me-2"></i>Azets Payroll Hub
            </div>
            <div class="nav-section">Main</div>
            <a asp-controller="Integration" asp-action="Index" class="active">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a>
            <a asp-controller="Integration" asp-action="Create">
                <i class="bi bi-plus-circle me-2"></i>Manual time entry
            </a>
            <div class="nav-section">Tools</div>
            <a href="/graphql" target="_blank">
                <i class="bi bi-graph-up me-2"></i>GraphQL API
            </a>
            <a href="/health" target="_blank">
                <i class="bi bi-heart-pulse me-2"></i>Health check
            </a>
        </aside>

        <div class="main">
            <header class="topbar">
                <div>
                    <div class="fw-semibold">Welcome, Integration Consultant</div>
                    <small class="text-muted">Payroll &amp; HR Integration Dashboard</small>
                </div>
                <div>
                    <span class="badge bg-light text-dark border me-3">
                        <i class="bi bi-cloud-arrow-down-fill me-1"></i> Demo environment
                    </span>
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
            </header>

            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
